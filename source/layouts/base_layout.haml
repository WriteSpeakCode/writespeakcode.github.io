<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{ name: "HandheldFriendly" , content: "True" }/
    %meta{ name: "MobileOptimized" , content: "320" }/
    %meta{ name: "viewport" , content: "width=device-width, initial-scale=1.0" }/

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Write/Speak/Code"

    = stylesheet_link_tag "normalize", "application"
    = javascript_include_tag "all"

    = javascript_include_tag "//use.typekit.net/olz5yha.js"

    :javascript
      try{Typekit.load();}catch(e){ alert(e); }

  %body{class: page_classes}
    .container
      %header.navigation{ role: "banner" }
        .navigation-wrapper
          %h1.logo><
            %a{ href: '/' }><
              = image_tag '/images/logo/writespeakcode-inverted.png'
          %a#js-mobile-menu.navigation-menu-button{ href: "javascript:void(0)" }
            %i.fa.fa-bars

          %nav{ role: "navigation" }
            %ul#js-navigation-menu.navigation-menu.show
              %li.nav-link.more.conference
                %a{ href:"/conference" } Conference
                %ul.submenu
                  %li
                    = link_to 'Our Sponsors!', '/sponsor'
                  %li.divided
                    = link_to 'Write - Thurs 3/19', '/conference/write'
                  %li
                    = link_to 'Speak - Fri 3/20', '/conference/speak'
                  %li
                    = link_to 'Code - Sat 3/21', '/conference/code'
                  %li.divided
                    = link_to 'Sponsor conference', '/sponsor'
                  %li
                    = link_to 'Scholarships', '/conference/scholarships'
                  %li.divided
                    = link_to 'Speakers', '/conference/speakers'
                  %li
                    = link_to 'Schedule', '/conference/schedule'
                  %li.divided
                    = link_to 'Testimonials', '/conference/testimonials'
                  %li
                    = link_to 'Childcare', '/conference/childcare'
                  %li
                    = link_to 'Accessibility', '/conference/childcare'

              %li.nav-link.meetups
                %a{ href:"/meetups" } Meetups

              %li.nav-link.events
                %a{ href:"/events" } Workshops
                -#%ul.submenu
                  -#%li
                    -#%a{ href:"/events/workshops"} Workshops
                  -#%li
                    -#%a{ href:"/events/custom" } Training &amp; Custom

              %li.nav-link.about.more
                %a{ href:"/about" } About
                %ul.submenu
                  %li
                    %a{ href:"/about/organizers"} Organizers
                  %li
                    = link_to "Code of Conduct", "/about/code-of-conduct"

              %li.nav-link.blog
                %a{ href:"/blog" } Blog

              %li.nav-link.sponsors
                %a{ href:"/sponsors" } Sponsor

          %div.navigation-tools
            %div.search-bar
              = partial "mailchimp"

      %section#main{ class: "#{current_page.data.page_class}" }
        = yield

      %footer.footer{ role: "contentinfo" }
        .footer-logo

        %ul
          %li
            = link_to "About", "/about"
          %li
            = link_to "Organizers", "/about/organizers"

        .footer-secondary-links
          %ul
            %li
              = link_to "Code of Conduct", "/about/code-of-conduct"
            %li Logo design by McKenna Lowry and Maryanne Ko
            %li
              = "&copy; Rebecca Miller-Webster 2013-#{DateTime.now.year}".html_safe

          %ul.footer-social
            %li
              %a{ href: 'http://www.twitter.com/writespeakcode' }
                %span.fa.fa-twitter
            %li
              %a{ href: 'http://www.github.com/writespeakcode' }
                %span.fa.fa-github
            %li
              %a{ href: 'mailto:info@writespeakcode.com' }
                %span.fa.fa-envelope

