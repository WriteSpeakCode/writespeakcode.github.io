<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{ name: "HandheldFriendly" , content: "True" }/
    %meta{ name: "MobileOptimized" , content: "320" }/
    %meta{ name: "viewport" , content: "width=device-width, initial-scale=1.0" }/

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Write/Speak/Code"

    = stylesheet_link_tag "normalize", "application"
    = javascript_include_tag "all"

    = javascript_include_tag "//use.typekit.net/olz5yha.js"

    :javascript
      try{Typekit.load();}catch(e){ alert(e); }

  %body{class: page_classes}
    .container
      %header.navigation{ role: "banner" }
        .navigation-wrapper
          %h1.logo><
            %a{ href: '/' }><
              = image_tag '/images/logo/writespeakcode-inverted.png'
          %a#js-mobile-menu.navigation-menu-button{ href: "javascript:void(0)" }
            MENU

          %nav{ role: "navigation" }
            %ul#js-navigation-menu.navigation-menu.show
              %li.nav-link 
                -#.more
                %a{ href:"/conference" } Conference
                -#%ul.submenu
                  -#%li
                    -#= link_to 'Write', '/conference/write'

              %li.nav-link.more
                %a{ href:"javascript:void(0)" } Events
                %ul.submenu
                  %li
                    %a{ href:"/events/workshops"} Workshops
                  %li
                    %a{ href:"/events/custom" } Training &amp; Custom

              %li.nav-link
                %a{ href:"/about" } About

              %li.nav-link
                %a{ href:"/blog" } Blog

              %li.nav-link
                %a{ href:"/sponsors" } Sponsor

          %div.navigation-tools
            %div.search-bar
              %form{ role:"search" }
                %input{ type:"search", placeholder:"Enter Search" }
                %button{ type:"submit" }
                  %img{ src:"https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png", alt: "Search Icon" }
            %a.sign-up{ href:"javascript:void(0)" } Sign Up

      %section#main{ class: "#{current_page.data.page_class}" }
        = yield

      %footer.footer{ role: "contentinfo" }
        .footer-logo

        %ul
          %li
            = link_to "About", "#"
          %li
            = link_to "Organizers", "#"

        .footer-secondary-links
          %ul
            %li
              = link_to "Code of Conduct", "#"
            %li Logo design by McKenna Lowry and Maryanne Ko
            %li
              = "&copy; Rebecca Miller-Webster 2013-#{DateTime.now.year}".html_safe

          %ul.footer-social
            %li
              %a{ href: 'http://www.twitter.com/writespeakcode' }
                %span.fa.fa-twitter
            %li
              %a{ href: 'http://www.github.com/writespeakcode' }
                %span.fa.fa-github
            %li
              %a{ href: 'mailto:info@writespeakcode.com' }
                %span.fa.fa-envelope
